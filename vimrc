set nocompatible

" ======== General Config ==============

set backspace=2		        
set hidden
set history=100                 
set laststatus=2
set noswapfile
set number                      
set numberwidth=5
set ruler
set showcmd                     

set shiftwidth=2
set tabstop=2
set expandtab
set textwidth=80 
set colorcolumn=+1

" ======== Completion ==============

set wildmode=list:longest,list:full
set wildmenu  

" ======== Scrolling ================

set scrolloff=8         "Start scrolling when we're 8 lines away from margins
set sidescrolloff=15
set sidescroll=1
